{{- $timestamp := generate "timestamp" }}
{{- $agentId := generate "agent.id" }}
{{- $agentVersion := generate "agent.version" }}
{{- $agentName := generate "agent.name" }}
{{- $agentEphemeralid := generate "agent.ephemeral_id" }}
{{- $hostname := generate "host.name" }}
{
    "@timestamp": "{{ $timestamp.Format "2006-01-02T15:04:05.000Z" }}",
    "agent": {
        "ephemeral_id": "{{ $agentEphemeralid }}",
        "id": "{{ $agentId }}",
        "name": "{{ $agentName }}",
        "type": "metricbeat",
        "version": "8.8.0"
    },
    "data_stream": {
        "dataset": "nginx.stubstatus",
        "namespace": "ep",
        "type": "metrics"
    },
    "ecs": {
        "version": "8.5.1"
    },
    "elastic_agent": {
        "id": "{{ $agentEphemeralid }}",
        "snapshot": false,
        "version": "8.8.0"
    },
    "event": {
        "agent_id_status": "verified",
        "dataset": "nginx.stubstatus",
        "duration": {{ generate "event.duration" }},
        "ingested": "{{ generate "event.ingested" | date "2006-01-02T15:04:05.000Z" }}",
        "module": "nginx"
    },
     "host": {
        "architecture": "x86_64",
        "containerized": false,
        "hostname": "{{ $hostname }}",
        "id": "66392b0697b84641af8006d87aeb89f1",
        "ip": [
            "{{ generate "host.ip" }}"
        ],
        "mac": [
            "02-42-AC-12-00-07"
        ],
        "name": "{{ $hostname }}",
        "os": {
            "codename": "focal",
            "family": "debian",
            "kernel": "5.15.49-linuxkit",
            "name": "Ubuntu",
            "platform": "ubuntu",
            "type": "linux",
            "version": "20.04.5 LTS (Focal Fossa)"
        }
    },
    "metricset": {
        "name": "stubstatus",
        "period": 10000
    },
    "nginx": {
        "stubstatus": {
            "accepts": {{ generate "accepts" }},
            "active": {{ generate "active" }},
            "current": {{ generate "current" }},
            "dropped": {{ generate "dropped" }},
            "handled": {{ generate "handled" }},
            "hostname": "{{ $hostname }}:80",
            "reading": {{ generate "reading" }},
            "requests": {{ generate "requests" }},
            "waiting": {{ generate "waiting" }},
            "writing": {{ generate "writing" }}
        }
    },
    "service": {
        "address": "http://{{ $hostname }}:80/server-status",
        "type": "nginx"
    }
}